<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Burn After Reading</title>
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/libraries.css") %>">
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

  <body>
    <script type="text/x-handlebars" data-template-name="navigation">
      <ul id="pools">
        {{#each pool in model}}
          <li class="active">
            {{#link-to "pool" pool.pool_id}}
              <span class="name">{{pool.description}}</span>
              <span class="status finished"/>
            {{/link-to}}
          </li>
        {{/each}}
      </ul>
    </script>

    <script type="text/x-handlebars" data-template-name="pool">
      <h1>{{description}}</h1>

      <h4>Download Complete, Seeding</h4>

      <div id="info">
        <dl class="dl-horizontal">
          <dt>Network</dt>
          <dd>5 Peers</dd>

          <dt>Upload</dt>
          <dd>10 KB/s</dd>

          <dt>Download</dt>
          <dd>120 KB/s</dd>
        </dl>
      </div>

      <div class="row" id="actionArea">
        <div class="col-lg-6">
          <button type="button" class="btn btn-default btn-lg">Download</button>
          <button type="button" class="btn btn-default btn-lg">Play Video</button>
          <div id="cinema"></div>
        </div>
      </div>
    </script>

    <div class="container-fluid">
      <% if get_flash(@conn, :info) do %><p id="alert" class="alert alert-info"><%= get_flash(@conn, :info) %></p><% end %>
      <% if get_flash(@conn, :error) do %><p id="alert" class="alert alert-danger"><%= get_flash(@conn, :error) %></p><% end %>

      <%= @inner %>

    </div> <!-- /container -->

    <script src="<%= static_path(@conn, "/js/vendor.js") %>"></script>
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
    <script>require("web/static/js/app")</script>
  </body>
</html>
